{
	"compilerOptions": {
		"target": "es2016",
		"jsx": "react-jsx",
		"module": "commonjs",
		"noEmit": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		},
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src", "types/styles.d.ts", "types/stories.d.ts", "types/covers.d.ts"],
	"exclude": ["src/styles.css"]
}
